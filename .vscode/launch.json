    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
        ,
          {
                "type": "node",
                "request": "launch",
                "name": "Launch via Nodemon",
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
                "program": "${workspaceFolder}/app.js",
                "restart": true,
                "console": "integratedTerminal",
                "internalConsoleOptions": "neverOpen",
                "skipFiles": [
                  "<node_internals>/**", // Skips all Node.js internal code
                  "node_modules/**" // Skips all files in the node_modules directory
                ]
              }
            ]
        
        }          
    
